<% @blog_posts.each do |blog_post| %>
  <div class="blog-post-content">
    <% if blog_post.cover_image.present? %>
      <%= image_tag blog_post.cover_image, style: "width:300px; height:200px" %>
    <% end %>
    <h2><%= link_to blog_post.title, blog_post %></h2>
    <% if blog_post.draft? %>
      <div class="draft-status">Draft</div>
    <% elsif blog_post.scheduled? %>
      <div class="scheduled-status">Scheduled</div>
    <% end %>
    <%= blog_post.content %>
  </div>
<% end %>

<%if @pagy.count > @pagy.items%>
  <div class="my-16">
    <%== pagy_bootstrap_nav(@pagy)%>
  </div>
<%end%>

